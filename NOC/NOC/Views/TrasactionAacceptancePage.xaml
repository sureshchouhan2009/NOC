                            RowSpacing="0"
                            VerticalOptions="Center">
                            <Frame
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                HasShadow="False"
                                Style="{StaticResource circleFram}">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="35"
                                    Source="doc_icon" />
                            </Frame>
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource menuLabel}"
                                Text="{Binding TransactonDetail.Transaction.TransactionNumber}" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="12"
                                Style="{StaticResource menuLabel}"
                                Text="{Binding TransactonDetail.ProjectStage.ProjectStageCode}" />
                        </Grid>
                    </Frame>
                    <Label
                        Grid.Row="1"
                        Style="{StaticResource menuLabel}"
                        Text="Approve/Reject"
                        TextColor="{DynamicResource BrandPrimary}"
                        VerticalOptions="Center" />
                    <BoxView
                        Grid.Row="2"
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Color="Gray" />
