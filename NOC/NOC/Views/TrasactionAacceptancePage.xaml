                                                    <DataTemplate>
                                                        <ViewCell>
                                                            <Grid
                                                                Margin="0"
                                                                Padding="0"
                                                                ColumnDefinitions="1.5*,4.5*,2.5*,1.5*"
                                                                HeightRequest="35">
                                                                <!--<components:CustomCheckBox
                                                                    Grid.Column="0"
                                                                    Margin="10"
                                                                    Checked="{Binding IsCheckedForAgreeget}"
                                                                    HorizontalOptions="Center"
                                                                    VerticalOptions="Center" />-->

                                                                <components:Checkbox
                                                                    Grid.Column="0"
                                                                    CheckColor="Green"
                                                                    CheckedOutlineColor="Orange"
                                                                    HeightRequest="15"
                                                                    HorizontalOptions="Center"
                                                                    IsChecked="{Binding IsCheckedForAgreeget}"
                                                                    OutlineColor="Black"
                                                                    VerticalOptions="Center"
                                                                    WidthRequest="30" />

                                                                <BoxView
                                                                    Grid.Column="0"
                                                                    HorizontalOptions="EndAndExpand"
                                                                    WidthRequest="1"
                                                                    Color="DarkGray" />

                                                                <Label
                                                                    Grid.Column="1"
