                        Grid.Row="3"
                        Margin="10,5,10,5"
                        Orientation="Horizontal">
                        <Frame
                            Margin="0"
                            Padding="0"
                            BackgroundColor="{Binding IsReviewerDecisionSelected, Converter={StaticResource boolToColorConverter}}"
                            HasShadow="False">
                            <Label
                                Padding="5"
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="Review Decision"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ReviewDecisionTappedCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame
                            Margin="0"
                            Padding="0"
                            BackgroundColor="{Binding IsConditionSelected, Converter={StaticResource boolToColorConverter}}"
                            HasShadow="False">
                            <Label
                                Padding="5"
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="Condition"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding DecisionTappedCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
